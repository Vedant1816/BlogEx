<%- include("partials/header.ejs") %>

<div class="list-group">
  <% if (locals.blogItems && blogItems.length > 0) { %>
    <% for (let i = 0; i < blogItems.length; i++) { %>
      <div class="list-group-item list-group-item-dark d-flex justify-content-between align-items-center">
        <a href="/edit/<%= blogItems[i].slug %>" class="text-black text-decoration-none">
          <%= blogItems[i].title %>
        </a>
        <form action="/delete/<%= blogItems[i].slug %>" method="POST" style="margin: 0;">
          <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
        </form>
      </div>
    <% } %>
  <% } else { %>
    <p>No blogs yet. Add one!</p>
  <% } %>
</div>
<%- include("partials/footer.ejs") %>